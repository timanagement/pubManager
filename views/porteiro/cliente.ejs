<div class="container">
    <div class="row">
        <div class="col col-xs-10 col-xs-offset-1">
            <input type="text" class="form-control" placeholder="Pesquisar Cliente...">
            
            <h3 class="text-center">Clientes</h3>
            <hr>

            <div class="row">
                <%
                for (cliente of clientes) {
                    %>
                    <div class="col col-xs-12 col-md-3">
                        <div class="panel">
                            <div class="panel-body">
                                <%- cliente.nome %>
                                <button class="btn btn-warning btn-xs btn-block" onclick="liberarComandaCliente('<%- cliente._id %>')">liberar</button>
                            </div>
                        </div>
                    </div>
                    <%
                }
                %>
            </div>
        </div>
    </div>
</div>